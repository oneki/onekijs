{
  "version": "0.4.2",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true
    },
    "version": {
      "push": false,
      "message": "chore(release): publish",
      "allowBranch": "master"
    }
  },
  "packages": [
    "packages/*", "examples/*"
  ],
  "useWorkspaces": true
  
}
