{
  "version": "0.15.5",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "conventionalCommits": true
    },
    "version": {
      "push": false,
      "message": "chore(release): publish %s",
      "allowBranch": "master"
    }
  },
  "packages": ["packages/*", "examples/*", "getting-started/*"],
  "useWorkspaces": true,
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": false
}
