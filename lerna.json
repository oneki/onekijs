{
  "version": "0.8.1",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "conventionalCommits": true
    },
    "version": {
      "push": false,
      "message": "chore(release): publish %s",
      "allowBranch": "master"
    }
  },
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "useWorkspaces": true
}
